<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App's base theme (Light Mode) -->
    <style name="Base.Theme.Purchasing" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Background and surface -->
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- Default text color -->
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>

        <!-- Toolbar title color -->
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <!-- App theme -->
    <style name="Theme.Purchasing" parent="Base.Theme.Purchasing">
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/ic_launcher_foreground</item>
    </style>
</resources>
